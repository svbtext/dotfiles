bindsym Mod4+Up exec --no-startup-id mpc toggle
bindsym Mod4+Left exec --no-startup-id mpc prev
bindsym Mod4+Right exec --no-startup-id mpc next

# Brightness Controls #
bindsym F6 exec xbacklight +10
bindsym F5 exec xbacklight -10

