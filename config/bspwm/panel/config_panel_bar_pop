#!/bin/bash

BG="#0b1317"
FG="#a899c1"

FONT1="neep:size=6"
FONT2="siji:size=8"

PW=256
PH=24
PX=556
PY=372

echo "%{c}ÓÑç  %{A:l:}logout%{A}  %{A:p:}shutdown%{A}  %{A:r:}reboot%{A}  %{A:s:}suspend%{A}  %{A:b:}close%{A}  " | lemonbar -g ${PW}x${PH}+${PX}+${PY} -f "$FONT1" -f "$FONT2" -B "$BG" -F "$FG" -p | \
    while :; do
        read line
        case $line in 
            'b')
                p=$(pgrep -n lemonbar)
                kill $p 
                exit 
                ;;
            's')
                systemctl suspend &
                p=$(pgrep -n lemonbar)
                kill $p 
                exit                
                ;;
            'p')
                shutdown now
                exit
                ;;
            'r')
                reboot
                exit
                ;;
	    'l')
		bspc quit && pkill panel && pkill mpd
		exit
		;;

        esac
    done
