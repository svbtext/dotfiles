#!/bin/bash
# Color directory
CD="$HOME/.Xresources"

# Fetch the Colors
BG="#121417"
FG="#deded6"

# Fonts
FONT1="neep:size=6"
FONT2="siji:size=8"

# Panel 
PW=256
PH=24
PX=582
PY=372

echo "%{c}ÓÑç  %{A:q:}quit%{A}  %{A:p:}shutdown%{A}  %{A:r:}reboot%{A}  %{A:s:}suspend%{A}  %{A:b:}exit%{A}  " | lemonbar -g ${PW}x${PH}+${PX}+${PY} -f "$FONT1" -f "$FONT2" -B "$BG" -F "$FG" -p | \
    while :; do
        read line
        case $line in 
            'b')
                p=$(pgrep -n lemonbar)
                kill $p 
                exit 
                ;;
            's')
                systemctl suspend &
                p=$(pgrep -n lemonbar)
                kill $p 
                exit                
                ;;
            'p')
                shutdown now
                exit
                ;;
            'r')
                reboot
                exit
                ;;
	    'q')
		bspc quit &
		pkill panel
		exit
		;;

        esac
    done
